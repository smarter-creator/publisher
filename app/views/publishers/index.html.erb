<div class="container mt-4">
  <h1 class="mb-3">Publishers</h1>
  <a href="<%= new_publisher_path %>" class="btn btn-primary mb-3">New Publisher</a>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @publishers.each do |publisher| %>
        <tr>
          <td><%= link_to publisher.title, publisher, class: "text-decoration-none" %></td>
          <td><%= publisher.description %></td>
          <td class="d-flex" style="gap: 1rem;">
            <a href="<%= edit_publisher_path(publisher) %>" class="btn btn-sm btn-warning">Edit</a>
            <%= button_to "Delete", publisher_path(publisher), 
            method: :delete, 
            data: { confirm: "Are you sure?" }, 
            class: "btn btn-danger btn-sm" %>      
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
